<div id="content_header">
    <h4><%= t('.title') %></h4>
</div>
<div id="content_body">
    <% if @match.photos.present? %>
        <% @match.photos.each do |photos| %>
            <div class="row py-2">
                <div class="col-9">
                    <img class="mw-100" src="<%= cloudinary_url(photos.key, height: 300, crop: :scale) %>"  style="width:100%;">
                </div>
                <div class="col my-auto">
                    <%= button_to t('button.delete'), deleted_attached_photos_url(id: photos.id),  method: :delete, data: { turbo_confirm: t('button.delete_confirm') }, class: "btn btn-danger" %>
                </div>
            </div>
        <% end %>
    <% else %>
        <div class="container text-center text-danger">
            <h6><%= t('.photos_empty') %></h6>
            <%= link_to t('button.edit'), edit_match_path(@match), class: "btn btn-warning btn-sm" %>
        </div>
    <% end %>

    <div class="row mt-2">
        <div class="col">
            <%= link_to t('button.show_match'), match_path(@match), class: "btn btn-primary" %>
        </div>
    </div>
</div>



