<%= form_with(model: season) do |form| %>
    <%= render 'shared/form_errors_messages', object: form.object %>

    <div class="row g-3">
        <div class="col-12">
            <%= form.label :name, t('.name'), style: "display: block" %>
            <%= form.text_field :name,  placeholder: t('.placeholder.name'), autofocus: true, class: "form-control" %>
        </div>

        <div class="col-md-6">
            <%= form.label :start_date, t('.start_date'), style: "display: block" %>
            <%= form.date_field :start_date, value: form.object.start_date, class: "form-control" %>
        </div>

        <div class="col-md-6">
            <%= form.label :end_date, t('.end_date'), style: "display: block" %>
            <%= form.date_field :end_date, value: form.object.end_date, class: "form-control" %>
        </div>

        <div class="col-12">
            <%= form.button nil, class: "btn btn-success" do %>
               <%= t('button.submit') %>
            <% end %>
        </div>
    </div>
<% end %>