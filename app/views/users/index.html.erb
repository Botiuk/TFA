<div id="content_header">
    <h4><%= t('.title') %></h4>
</div>

<div id="content_body">
    <div class="text-end py-2">
        <%= form_tag(admin_users_search_path, :method => "get") do %>
            <%= text_field_tag(:email, nil, placeholder: t('.search_placeholder'), class: "fs-6 fst-italic text-center border border-white rounded-2 p-1") %>
            <%= button_tag(t('button.search'), type: "submit", :name => nil, class: "btn btn-primary") %>
        <% end %>
    </div>

    <div class="table-responsive">
        <table class="table align-middle table-dark table-striped table-bordered border-dark-subtle">
            <tr class="text-center">
                <th style="width: 40%;"><%= t('.email') %></th>
                <th style="width: 20%;"><%= t('.role') %></th>
                <th colspan="3", style="width: 30%;"><%= t('.change_role') %></th>
            </tr>
            <% @users.each do |user| %>
                <%= render user %>
            <% end %>
        </table>
    </div>

    <%= render 'shared/pagy' %>
</div>