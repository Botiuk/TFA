<div id="content_header">
    <% if @match.present? %>
        <h4><%= t('.title_match') %> "<%= @match.home_team.name %> - <%= @match.visitor_team.name %> (<%= I18n.l(@match.start_at, format: :only_date) %>)"</h4>
    <% elsif @video.present? %>
        <h4><%= t('.title_video') %> "<%= @video.name %>"</h4>
    <% else %>
        <h4><%= t('.title') %></h4>
    <% end %>
</div>
<div id="content_body">
    <%= render "form", match_video: @match_video %>
</div>